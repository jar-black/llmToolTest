# Server Configuration
# Choose 'ollama' or 'lmstudio'
SERVER_TYPE=ollama

# Ollama Server Settings
OLLAMA_HOST=localhost
OLLAMA_PORT=11434

# LM Studio Server Settings
LMSTUDIO_HOST=localhost
LMSTUDIO_PORT=1234

# API Configuration
API_TIMEOUT=300
MAX_RETRIES=3

# Model Management
# Automatically pull models if not found on server
AUTO_PULL_MODELS=true
# Delete models from server after testing (to free up resources)
DELETE_AFTER_TEST=true

# Results Configuration
RESULTS_DIR=./results
